<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="Singapore_IpsRightScreen" version="3.0">
  <display-name>LogisticsSupervision</display-name>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>LocalizationResource_center</param-value>
  </context-param>
  <listener>
    <description>Spring加载</description>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <description>字符集过滤器</description>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <!-- SessionFilter过滤器一定要配置在StrutsPrepareAndExecuteFilter的前边，否则会覆盖*.action不起作用 -->
  <filter>
  	<filter-name>SessionFilter</filter-name>
  	<filter-class>com.nuctech.ls.center.utils.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>SessionFilter</filter-name>
  	<url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>SessionFilter</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.nuctech.ls.center.utils.UserOnlineListener</listener-class>
  </listener>
  <listener>
    <description>创建超级管理员</description>
    <listener-class>com.nuctech.ls.center.utils.CreateAdminListener</listener-class>
  </listener>
  <listener>
    <description>加载车辆最新缓存信息</description>
    <listener-class>com.nuctech.ls.center.utils.LoadVehicleGPSStatusListener</listener-class>
  </listener>
  
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    <init-param>
      <param-name>actionPackages</param-name>
      <param-value>
           com.nuctech.ls.system.action
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
 
  
  <welcome-file-list>
    <welcome-file>/login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>500</error-code>
    <location>/exception.jsp</location>
  </error-page>
</web-app>